---
interface Props {
  title: string;
  text: string;
  img: string;
  link:string;
}

const { title, img, text, link } = Astro.props;
import Button from "./Button.astro";
---

<div
  class="p-5 bg-[#161b22] w-[17rem] h-[26rem] flex flex-col gap-5 rounded-lg"
>
  <div>
    <img class="rounded-lg" src={img} alt="" />
  </div>
  <div class="flex flex-col gap-4">
    <h3 class="text-cyan text-lg font-bold tracking-wide">{title}</h3>
    <p class="text-white text-sm">{text}</p>
  </div>
  <a href={link}><Button name="Ver Servicio" color="white"/></a>
</div>
