---
import PageInfo from "../components/PageInfo.astro";
import Layout from "../layouts/Layout.astro";
import CardSection from "../components/CardSection";
import Contact from "../components/Contact";
import optimization from "../config/optimization.json"
---

<Layout title="Landing Pages" icon="../2.png">
  <PageInfo
    img="../opt.jpg"
    title="Optimization"
    textHeader="La optimización de webs mejora la eficiencia y la experiencia del usuario en un sitio. Esto incluye aumentar la velocidad de carga, mejorar el SEO, optimizar la experiencia del usuario y asegurar la seguridad. Es crucial para aumentar la retención de visitantes, mejorar las tasas de conversión y lograr un mejor posicionamiento en los motores de búsqueda."
  />
  <CardSection data={optimization} />
  <Contact />
</Layout>
