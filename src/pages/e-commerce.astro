---
import Layout from "../layouts/Layout.astro";
import CardSection from "../components/CardSection";
import PageInfo from "../components/PageInfo.astro";
import Contact from "../components/Contact";
import ecommerce from "../config/e-commerce.json" 

---

<Layout title="E-commerce" icon="../2.png">
  <PageInfo
    img="../e-commerce.jpg"
    title="E-commerce"
    textHeader="Un e-commerce es una plataforma en línea donde se compran y venden productos o servicios. Este tipo de sitio web permite a los usuarios navegar por una variedad de productos, agregar artículos a un carrito de compras y realizar transacciones financieras de manera segura."
  />
  <CardSection data={ecommerce} />
  <Contact />
</Layout>

